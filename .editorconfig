# EditorConfig is awesome: http://EditorConfig.org

root = true;

[*]
#  Ensure there's no lingering whitespace
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Set indentation
indent_style = space
indent_size = 2
